.header {
  position: fixed;
  width: 670rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  background-color: white;
}

.header_left {
}

.header_right {
}

.content {
  width: 100vw;
  padding-top: 90rpx;
  padding-bottom: 40rpx;
}

.card {
  background-color: white;
  border-radius: 24rpx;
  margin: 30rpx;
  padding: 30rpx;
}

