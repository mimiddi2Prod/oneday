.dashed {
  border-top: 1rpx dashed rgb(230, 230, 230);
  width: 630rpx;
  margin: 10rpx 0;
}

.goods-info {
  display: flex;
  flex-direction: row;
  align-content: center;
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.goods-detail {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}

.goods-name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.font-key {
  font-size: 24rpx;
}

.font-value {
  font-size: 30rpx;
}

.dashed {
  border-top: 1rpx dashed rgb(230, 230, 230);
  width: 660rpx;
  margin: 20rpx 0;
}

.line {
  border-top: 1rpx solid rgb(230, 230, 230);
  width: 660rpx;
  margin: 10rpx 0;
}

.sub-total-price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.sub-total-price > text {
  font-size: 40rpx;
}
