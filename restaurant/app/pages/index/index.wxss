/**index.wxss**/

.header {
  position: fixed;
  width: 670rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}

.header_left {
}

.header_right {
}

.content {
  width: 100vw;
  /* height: 100vh; */
  display: flex;
  flex-direction: row;
  padding-top: 90rpx;
}

.left {
  /* width: 200rpx; */
  width: 150rpx;
  flex-shrink: 0;
  /* overflow: hidden; *//* border-right: 1rpx solid #eee0c0; */
}

.left ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.right {
  /* width: 550rpx; */
  width: 560rpx;
  flex-grow: 1;
  /* overflow: scroll; */
}

.category-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  /* background-color: #eee0c0; */
  color: red;
}

.goodsWrap-category {
  position: fixed;
  width: 580rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee0c0;
}

.goods {
  padding-top: 100rpx;
}

.goods-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  /* margin-left: 20rpx; */
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #f2f2f2;
}

.goods-pic {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  height: 80px;
}

.goodsName {
  font-size: 28rpx;
}

.goodsPrice {
  color: #e64340;
}
