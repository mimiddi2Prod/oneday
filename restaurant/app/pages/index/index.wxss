/**index.wxss**/

.header {
  position: fixed;
  width: 670rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}

.header_left {
}

.header_right {
}

.content {
  width: 100vw;
  /* height: 100vh; */
  display: flex;
  flex-direction: row;
  padding-top: 90rpx;
}

.left {
  /* width: 200rpx; */
  width: 150rpx;
  flex-shrink: 0;
  /* overflow: hidden; *//* border-right: 1rpx solid #eee0c0; */
}

.left ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.right {
  /* width: 550rpx; */
  width: 560rpx;
  flex-grow: 1;
  /* overflow: scroll; */
}

.category-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  /* background-color: #eee0c0; */
  color: red;
}

.goodsWrap-category {
  position: fixed;
  width: 580rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee0c0;
}

.goods {
  padding-top: 100rpx;
}

.goods-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  /* margin-left: 20rpx; */
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #f2f2f2;
}

.goods-pic {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  height: 80px;
  width: 300rpx;
  /* max-width: 300rpx */
}

.goodsName {
  font-size: 28rpx;
}

.goodsPrice {
  color: #e64340;
}

.goods-add {
  width: 80rpx;
  display: flex;
  justify-content: flex-end;
}

.footer {
  position: fixed;
  bottom: 50rpx;
  width: 100%;
  padding: 0 50rpx;
}

.goods-param {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 3;
}

.goods-param-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: #fff;
  opacity: 0.6;
}

.goods-param-container {
  position: absolute;
  bottom: 0;
  background-color: #fff;
  border-top: 1rpx solid rgb(199, 192, 241);
  padding: 20rpx;
  width: 710rpx;
}

.hide {
  display: none;
}

.goods-param-close{
  position: absolute;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
}

.goods-param-header {
  display: flex;
  flex-direction: row;
}

.goods-param-a {
  width: 240rpx;
}

.goods-param-pic {
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
}

.goods-param-b {
  margin: 20rpx 0 20rpx 10rpx;
  width: 470rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-param-c {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 0 20rpx 0;
}

.goods-add-cart {
  text-align: end
}

.goods-add-cart-have{
  display: flex;
  flex-direction: row
}

.param-select{
  color:red
}